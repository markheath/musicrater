<UserControl x:Class="MusicRater.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500" d:DesignWidth="400" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" xmlns:my="clr-namespace:MusicRater">

    <Grid x:Name="LayoutRoot" Background="#333333">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="164*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <MediaElement x:Name="mediaElement1" />
        <my:ToolbarControl Margin="5"/>
        <my:PositionControl Margin="5" x:Name="positionControl1" Grid.Row="1" />
        <sdk:Label Height="28" Margin="5,0,0,0" Name="label1" VerticalAlignment="Top" Foreground="Red" Content="{Binding ErrorMessage}" Grid.Row="1" />
        <my:TrackListControl Grid.Row="2" Margin="5" x:Name="trackListControl1"  />
        <my:RatingControl Grid.Row="3" Margin="5" x:Name="ratingControl1" DataContext="{Binding Tracks.View.CurrentItem}" />
    </Grid>
</UserControl>
